    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="zxyilian.myexpanabledemo.MainActivity">

    <ExpandableListView
        android:id="@+id/list"
        android:layout_width="match_parent"
